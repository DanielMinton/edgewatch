<% content_for :title, @edge_site.name %>

<div class="mb-6">
  <%= link_to edge_sites_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
    <span class="inline-flex items-center">
      <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Edge Sites
    </span>
  <% end %>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
    <div class="flex items-center">
      <% status_color = case @edge_site.status
                        when "healthy" then "bg-green-400"
                        when "degraded" then "bg-yellow-400"
                        when "critical" then "bg-red-400"
                        else "bg-gray-400"
                        end %>
      <div class="h-4 w-4 rounded-full <%= status_color %> animate-pulse mr-3"></div>
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @edge_site.name %></h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= @edge_site.slug %></p>
      </div>
    </div>
    <div class="flex space-x-3">
      <%= button_to "Collect Metrics", collect_metrics_edge_site_path(@edge_site), method: :post, class: "inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500" %>
      <%= link_to "Edit", edit_edge_site_path(@edge_site), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= button_to "Delete", @edge_site, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this edge site?" }, class: "inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" %>
    </div>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Region</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @edge_site.region || "Not specified" %></dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Environment</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @edge_site.environment.humanize %></dd>
      </div>
      <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
          <% badge_class = case @edge_site.status
                           when "healthy" then "bg-green-100 text-green-800"
                           when "degraded" then "bg-yellow-100 text-yellow-800"
                           when "critical" then "bg-red-100 text-red-800"
                           else "bg-gray-100 text-gray-800"
                           end %>
          <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= badge_class %>">
            <%= @edge_site.status.humanize %>
          </span>
        </dd>
      </div>
      <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Last Seen</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
          <% if @edge_site.last_seen_at %>
            <%= @edge_site.last_seen_at.strftime("%B %d, %Y at %H:%M UTC") %>
            (<%= time_ago_in_words(@edge_site.last_seen_at) %> ago)
          <% else %>
            Never connected
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
</div>

<div class="mt-8">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Resource Usage</h3>
  <div class="bg-white shadow rounded-lg p-6">
    <div class="h-64" data-controller="chart">
      <canvas id="metrics-chart"
              data-chart-target="canvas"
              data-chart-endpoint="<%= metrics_edge_site_path(@edge_site, type: "cpu_percent", format: :json) %>">
      </canvas>
    </div>
  </div>
</div>

<% if @alerts.any? %>
  <div class="mt-8">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Active Alerts</h3>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <ul role="list" class="divide-y divide-gray-200">
        <% @alerts.each do |alert| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <% severity_class = case alert.severity
                                    when "critical" then "text-red-600"
                                    when "error" then "text-orange-600"
                                    when "warning" then "text-yellow-600"
                                    else "text-blue-600"
                                    end %>
                <svg class="h-5 w-5 <%= severity_class %> mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= alert.title %></p>
                  <p class="text-sm text-gray-500"><%= alert.message %></p>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-sm text-gray-500"><%= time_ago_in_words(alert.triggered_at) %> ago</span>
                <%= button_to "Acknowledge", acknowledge_alert_path(alert), method: :patch, class: "text-sm text-red-600 hover:text-red-900" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
