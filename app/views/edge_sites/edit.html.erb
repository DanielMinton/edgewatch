<% content_for :title, "Edit #{@edge_site.name}" %>

<div class="mb-6">
  <%= link_to @edge_site, class: "text-sm text-gray-500 hover:text-gray-700" do %>
    <span class="inline-flex items-center">
      <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to <%= @edge_site.name %>
    </span>
  <% end %>
</div>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">Edit Edge Site</h1>
  <%= render "form", edge_site: @edge_site %>
</div>
